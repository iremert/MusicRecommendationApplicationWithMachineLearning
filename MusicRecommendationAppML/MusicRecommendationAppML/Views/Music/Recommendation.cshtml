@model MusicRecommendationAppML.Models.Recommendation2ViewModel

@{
    ViewData["Title"] = "Recommendation";
    Layout = "~/Views/Music/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<!-- Event Section Begin -->
<section class="event spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>TavsIyeler</h2>
                </div>
            </div>
        </div>
        @if (ViewBag.hata == null)
        {
            <div class="row">
                <div class="event__slider owl-carousel">

                    @foreach (var item in Model.Songs)
                    {
                        <div class="col-lg-4">
                            <div class="event__item">
                                <div class="event__item__pic set-bg" data-setbg="~/music2/img/events/retro.jpg">
                                    <img src="~/music2/img/events/retro.jpg" />
                                    <div class="tag-date">
                                        <span style="font-size:10px;margin-right:5px;">Listen to Music</span>
                                    </div>
                                </div>
                                <div class="event__item__text">
                                    <h4>@item</h4>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }
        else
        {
            <br /><br />
            <p style="color:darkred;font-size:30px;">@ViewBag.hata</p>
        }
    </div>
</section>
<!-- Event Section End -->
