@model MusicRecommendationAppML.Models.Song2ViewModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Music/_Layout.cshtml";
}


<!-- Track Section Begin -->
<section class="hero spad set-bg">
    <div class="container">
        <!-- Hero Section End -->
        <div class="row">
            <div class="col-lg-7">
                <div class="section-title">
                    <h2>Tüm Müzikler</h2>
                    <h1>Müzik Podcast</h1>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model.Songs)
            {
                <div class="col-lg-12">
                    <div class="event__item">
                        <div class="event__item__pic set-bg" data-setbg="~/music2/img/events/retro.jpg">
                            <img src="~/music/images/retro3.jpg" style="height:300px;width:500px;margin-left:320px;" />
                            <div class="tag-date">
                                <span style="font-size:20px;margin-right:5px;">Şarkı:@item.Song</span>
                                <span style="font-size:20px;margin-right:5px;">Artist:@item.Artist</span>
                            </div>
                        </div>
                        <div class="event__item__text">
                            <h4>@item.Text</h4>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Track Section End -->
